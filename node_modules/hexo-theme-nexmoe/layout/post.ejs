<div class="nexmoe-post">
  <article>
    <% if (page.cover){ %>
        <div class="nexmoe-post-cover absolute" style="padding-top: <%- page.coverHeight/page.coverWidth*100 %>%;"> 
            <img src="<%- page.cover %>" alt="<%= page.title %>" loading="lazy">
            <h1><%= page.title %></h1>
        </div>
    <%}  else{ %>
        <div class="nexmoe-post-cover"> 
            <img src="<%- theme.background.path %>" alt="<%= page.title %>" loading="lazy">
            <h1><%= page.title %></h1>
        </div>
    <% } %>
    
    <%- partial('_partial/_post/meta', {page: page}) %>

    <%- page.content %>
    <%- theme.slotArticleEnd %>
  </article>

  <%- partial('_layout/nexmoe/mathjax') %>
  
  <% if (!page.reprint){ %>
      <%- partial('_partial/_post/copyright') %>
  <% } %>
  
  <%- partial('_partial/_post/tag') %>
  
  <% if (theme.function.copyCode) { %>
    <%- js_auto_version('js/copy-codeblock') %>
  <% } %>

  <% if (page.comments){ %>
      <div class="nexmoe-post-footer">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css">
        <script src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/js-md5@0.8.3/build/md5.min.js"></script>
      </div>
      <div id="gitalk-container"></div>
      <script>
        const gitalk = new Gitalk({
        clientID: 'Ov23liwfalqYOVVm9M87',
        clientSecret: '7c4dcc6a1c8ae529d8e1fb89dcfa6b4a4f5c6cd7',
        owner: 'Lucky-Cloud09',
        repo: 'Lucky-Cloud09.github.io',
        admin: ["Lucky-Cloud09"],
        id: md5(location.pathname),      // Ensure uniqueness and length less than 50
        distractionFreeMode: false  // Facebook-like distraction free mode
      })
        gitalk.render('gitalk-container')
      </script>
  <% } %>
</div>
